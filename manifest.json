{

  "manifest_version": 2,
  "name": "Cat Simulator",
  "version": "0.1",
  "description": "Simulate feline interferences",

  "browser_action": {
    "default_icon": "icons/caticon.png",
    "default_title": "Cal to Butt",
    "default_popup": "src/popup.html"
  },


  "permissions": [
    "storage"
],

"web_accessible_resources": ["src/assets/cat_tiles.png"],

"icons": {
  "64": "icons/caticon.png"
},

"background": {
  "scripts": ["src/background.js"]
},
"options_ui": {
    "page": "src/options.html",
    "chrome_style": true,
    "open_in_tab": false
},

  "content_scripts": [
  {
    "matches": [
      "<all_urls>"
    ],
    "js": ["src/content.js"],
    "css": ["src/content.css"]
  }
]
}
